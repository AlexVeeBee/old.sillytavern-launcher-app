{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "sillytavern-starter",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": true,
        "open": true,
        "execute": true,
        "scope": [
          { "name": "cd-st", "cmd": "cd", "args": ["jellytheme-Time-Machine"] },
          { "name": "cd-switch-st", "cmd": "cd", "args": ["../jellytheme-Time-Machine"] },
          { "name": "install-node", "cmd": "winget", "args": ["install", "-e", "--id", "OpenJS.NodeJS"] },
          { "name": "node-installed", "cmd": "node", "args": ["--version"] },
          { "name": "install-git","cmd": "winget","args": ["install", "-e", "--id", "Git.Git"] },
          { "name": "git-installed", "cmd": "git", "args": ["--version"] },
          { "name": "git-clone-st", "cmd": "git", "args": [
            "clone",
            "https://github.com/AlexVeeBee/jellytheme-Time-Machine"
          ]},
          { "name": "git-pull-st", "cmd": "git", "args": [
            "pull",
            "https://github.com/AlexVeeBee/jellytheme-Time-Machine"
          ]},
          { "name": "npm-install", "cmd": "npm",
            "args": []
          }
        ]
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "copyFile": true,
        "createDir": true,
        "exists": true,
        "readDir": true,
        "readFile": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "scope": [
          "read:all",
          "write:all"
        ],
        "writeFile": true
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": true,
        "relaunchDangerousAllowSymlinkMacos": false
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": true,
        "open": true,
        "save": false
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.sillytavern.starter",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "sillytavern-starter",
        "width": 800,
        "height": 600,
        "minWidth": 400,
        "minHeight": 300
      }
    ]
  }
}
